    <style name="Tv.Medium.White.XXS">
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="Tv.Regular">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Tv.Regular.Black">
        <item name="android:textColor">@color/black_light</item>
    </style>

