<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="soy.gabimoreno.gabinimble">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".presentation.splash.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.main.MainActivity"/>

        <service android:name=".presentation.main.service.PlayerService"/>
        <service android:name=".presentation.main.service.child.PlayPlayerService"/>
        <service android:name=".presentation.main.service.child.PausePlayerService"/>
        <service android:name=".presentation.main.service.child.StopPlayerService"/>
    </application>
</manifest>
